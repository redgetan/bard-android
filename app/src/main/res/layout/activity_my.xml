<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
>
    <include
            layout="@layout/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <FrameLayout   xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/top_white_border"
                    android:gravity="center_vertical|center_horizontal"
    >
        <com.roplabs.madchat.ui.SquareVideoView android:id="@+id/video_view"
                       android:background="@color/white"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />

        <TextView android:id="@+id/display_debug"
                  android:layout_gravity = "center_vertical|center_horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/display_word_error"
                  android:layout_gravity = "bottom|left"
                  android:layout_margin="10dp"
                  android:background="@android:color/holo_red_light"
                  android:textColor="@android:color/white"
                  android:visibility="visible"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

        <ProgressBar
                android:id="@+id/query_video_progress_bar"
                android:layout_gravity = "center_vertical|center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
        />


    </FrameLayout>

    <LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/bottom_gray_border"
    >
        <MultiAutoCompleteTextView android:id="@+id/edit_message"
                                   android:layout_width="0dp"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="1"
                                   android:background="@android:color/transparent"
                                   android:completionThreshold="1"
                                   android:hint="@string/edit_message"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="sendMessage"
                android:alpha="0.3"
                android:src="@drawable/ic_send_black_24dp"
                android:contentDescription="@string/button_send"/>
    </LinearLayout>

</LinearLayout>

