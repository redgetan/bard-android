<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
>
    <include
            layout="@layout/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent">

        <LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/bard_text_entry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
        >
            <com.roplabs.bard.ui.widget.WordsAutoCompleteTextView android:id="@+id/edit_message"
                                                               android:layout_width="0dp"
                                                                  android:layout_marginLeft="5dp"
                                                                  android:layout_marginStart="5dp"
                                                                  android:layout_marginRight="5dp"
                                                               android:layout_height="wrap_content"
                                                               android:layout_weight="1"
                                                               android:background="@android:color/transparent"
                                                               android:completionThreshold="1"
                                                               android:hint="@string/edit_message"/>

            <ImageView
                    android:id="@+id/send_message_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:onClick="sendMessage"
                    android:alpha="0.3"
                    android:src="@drawable/ic_send_black_24dp"
                    android:contentDescription="@string/button_send"/>
        </LinearLayout>

        <HorizontalScrollView
                android:id="@+id/preview_timeline_container"
                android:layout_width="match_parent"
                android:layout_below="@+id/bard_text_entry"
                android:layout_height="40dp">
            <LinearLayout
                    android:id="@+id/preview_timeline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                <!-- child views in here -->
            </LinearLayout>
        </HorizontalScrollView>

        <FrameLayout   xmlns:android="http://schemas.android.com/apk/res/android"
                       xmlns:tools="http://schemas.android.com/tools"
                       android:id="@+id/vp_pager_container"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:layout_below="@+id/preview_timeline_container"
                       android:orientation="vertical"
                       android:gravity="center_vertical|center_horizontal"
        >

            <com.roplabs.bard.ui.widget.InputViewPager
                    android:id="@+id/vpPager"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
            </com.roplabs.bard.ui.widget.InputViewPager>

            <TextView android:id="@+id/display_debug"
                      android:layout_gravity = "center_vertical|center_horizontal"
                      android:layout_marginTop="30dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>

            <ProgressBar
                    android:id="@+id/query_video_progress_bar"
                    android:layout_gravity = "center_vertical|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
            />

        </FrameLayout>


    </RelativeLayout>


</LinearLayout>

