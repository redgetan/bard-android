<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- This would set the toolbar's background color -->
        <item name="android:background">@color/purple</item>
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- android:actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@color/white</item>
        <item name="actionModeShareDrawable">@drawable/ic_share_white_24dp</item>
        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
        <!--
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        -->
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/black</item>

        <item name="android:windowBackground">@color/purple</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/iron</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/purple</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabIndicatorColor">@color/mediumaquamarine</item>
        <item name="tabSelectedTextColor">@color/mediumaquamarine</item>
    </style>

    <style name="SceneSelectTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/purple</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabIndicatorColor">@color/mediumaquamarine</item>
        <item name="tabSelectedTextColor">@color/mediumaquamarine</item>
    </style>

    <style name="BardCreateTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/ink</item>
        <item name="tabPaddingStart">5dp</item>
        <item name="tabPaddingEnd">5dp</item>
        <item name="tabTextAppearance">@style/BardCreateTextAppearance</item>
        <item name="tabIndicatorColor">@color/mediumaquamarine</item>
        <item name="tabSelectedTextColor">@color/mediumaquamarine</item>
    </style>

    <style name="MainSceneSelectTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/ios_light_iron</item>
        <item name="tabPaddingStart">5dp</item>
        <item name="tabPaddingEnd">5dp</item>
        <item name="tabTextAppearance">@style/MainSceneSelectTextAppearance</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/iron</item>
    </style>

    <style name="MainSceneSelectTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/jumbo</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BardCreateTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/iron</item>
    </style>

    <style name="MySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ChannelTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/purple</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabIndicatorColor">@color/mediumaquamarine</item>
        <item name="tabSelectedTextColor">@color/mediumaquamarine</item>
    </style>

    <style name="FeedButton" parent="android:Widget">
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>


</resources>
