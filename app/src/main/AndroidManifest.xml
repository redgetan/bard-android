<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sandbox.myfirstapp.app" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.MyActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName=".ui.MyActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MyActivity" />
        </activity>
        <activity
                android:name=".ui.ProjectListActivity"
                android:label="@string/title_project_list"
                android:parentActivityName=".ui.MyActivity" >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.MyActivity" />
        </activity>
    </application>

</manifest>
