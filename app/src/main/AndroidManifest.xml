<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.roplabs.bard" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="com.roplabs.bard.ClientApp"
        android:theme="@style/AppTheme" >
        <meta-data android:name="net.hockeyapp.android.appIdentifier" android:value="${HOCKEYAPP_APP_ID}" />

        <meta-data
                android:name="io.fabric.ApiKey"
                android:value="bf06d741fa30b7cb5be2fe488dfe67d7f1952540" />
        <activity
            android:name="com.roplabs.bard.ui.activity.MainActivity"
            android:theme="@style/SplashTheme"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.roplabs.bard.ui.activity.LoginActivity" android:theme="@style/AppTheme.Dark" android:windowSoftInputMode="adjustResize"/>
        <activity android:name="com.roplabs.bard.ui.activity.SignupActivity" android:theme="@style/AppTheme.Dark" android:windowSoftInputMode="adjustResize"/>

        <activity
                android:name=".ui.activity.InputActivity"
                android:label="@string/app_name"
                android:configChanges="orientation|screenSize"
                android:windowSoftInputMode="adjustResize"
                android:parentActivityName="com.roplabs.bard.ui.activity.IndexActivity" >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.roplabs.bard.ui.activity.IndexActivity" />
        </activity>

        <activity
            android:name="com.roplabs.bard.ui.activity.SaveActivity"
            android:label="@string/title_activity_save"
            android:parentActivityName=".ui.activity.InputActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activity.InputActivity" />
        </activity>
        <activity
                android:name="com.roplabs.bard.ui.activity.IndexActivity"
                android:label="@string/app_name">
        </activity>
        <activity
                android:name="com.roplabs.bard.ui.activity.RepoListActivity"
                android:label="@string/title_project_list"
                android:parentActivityName=".ui.activity.InputActivity" >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.activity.InputActivity" />
        </activity>
        <activity
                android:name="com.roplabs.bard.ui.activity.VideoPlayerActivity"
                android:configChanges="orientation|screenSize"
                android:parentActivityName="com.roplabs.bard.ui.activity.RepoListActivity" >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.roplabs.bard.ui.activity.RepoListActivity" />
        </activity>
    </application>

</manifest>
