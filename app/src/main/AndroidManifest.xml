<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.roplabs.madchat" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="com.roplabs.madchat.ClientApp"
        android:theme="@style/AppTheme" >
        <meta-data
                android:name="io.fabric.ApiKey"
                android:value="bf06d741fa30b7cb5be2fe488dfe67d7f1952540" />
        <activity
            android:name=".ui.MainActivity"
            android:theme="@style/SplashTheme"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.roplabs.madchat.ui.LoginActivity" android:theme="@style/AppTheme.Dark" android:windowSoftInputMode="adjustResize"/>
        <activity android:name="com.roplabs.madchat.ui.SignupActivity" android:theme="@style/AppTheme.Dark" android:windowSoftInputMode="adjustResize"/>

        <activity
                android:name="com.roplabs.madchat.ui.MimicActivity"
                android:label="@string/app_name"
                android:configChanges="orientation|screenSize"
                android:parentActivityName=".ui.IndexActivity" >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.IndexActivity" />
        </activity>

        <activity
            android:name="com.roplabs.madchat.ui.SaveActivity"
            android:label="@string/title_activity_save"
            android:parentActivityName=".ui.MimicActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MimicActivity" />
        </activity>
        <activity
                android:name="com.roplabs.madchat.ui.IndexActivity"
                android:label="@string/app_name">
        </activity>
        <activity
                android:name="com.roplabs.madchat.ui.RepoListActivity"
                android:label="@string/title_project_list"
                android:parentActivityName=".ui.MimicActivity" >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ui.MimicActivity" />
        </activity>
        <activity
                android:name="com.roplabs.madchat.ui.VideoPlayerActivity"
                android:configChanges="orientation|screenSize"
                android:parentActivityName="com.roplabs.madchat.ui.RepoListActivity" >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.roplabs.madchat.ui.RepoListActivity" />
        </activity>
    </application>

</manifest>
